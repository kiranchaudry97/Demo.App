@model List<Demo.App.Models.Customer>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center my-4">Klantenlijst</h1>

<div class="container">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Naam</th>
                <th>Email</th>
                <th class="text-center">Acties</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>@customer.Name</td>
                    <td>@customer.Email</td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@customer.Id" class="btn btn-sm btn-primary mx-1">Bewerken</a>
                        <a asp-action="Delete" asp-route-id="@customer.Id" class="btn btn-sm btn-danger mx-1">Verwijderen</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-end">
        <a asp-action="Add" class="btn btn-success">Klant toevoegen</a>
    </div>
</div>