@model Demo.App.Models.Order

<h1>Bestelling Bevestigen</h1>

<p>Bestelling ID: @Model.Id</p>
<p>Klant ID: @Model.CustomerId</p>
<p>Boek(en):</p>
<ul>
    @foreach (var bookId in Model.BookIds)
    {
        <li>Boek ID: @bookId</li>
    }
</ul>
<p>Besteldatum: @Model.OrderDate</p>

<a asp-controller="Book" asp-action="Index" class="btn btn-primary">Terug naar boekenlijst</a>